<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#B0DAFF" />
        </shape>
    </item>

    <!-- Button Layer -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/blue_primary" />
        </shape>
    </item>
</layer-list>