<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/course_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Color Accent Bar -->
        <View
            android:id="@+id/course_accent"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#4ECDC4"
            android:layout_marginEnd="16dp" />

        <!-- Course Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Course Code -->
            <TextView
                android:id="@+id/course_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CS 101"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:letterSpacing="0.02" />

            <!-- Course Name -->
            <TextView
                android:id="@+id/course_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introduction to Programming"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Course Description -->
            <TextView
                android:id="@+id/course_desc_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basic programming concepts"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginTop="6dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Student Count -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_students"
                    app:tint="#757575" />

                <TextView
                    android:id="@+id/student_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 students"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            app:tint="#BDBDBD"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>