<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7"
    tools:context=".StudentDashboardActivity">

    <!-- Main ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- Header Card with Profile and Stats -->
            <androidx.cardview.widget.CardView
                android:id="@+id/header_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#2D3748"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Profile Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Profile Picture with Ring -->
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <!-- Outer Ring -->
                            <View
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="@drawable/profile_ring" />

                            <!-- Profile Picture -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                app:cardCornerRadius="40dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/profile_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_person"
                                    android:contentDescription="Profile Picture" />

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                        <!-- Name and Class Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/student_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Anna Williams"
                                    android:textColor="@android:color/white"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="ðŸŽ“"
                                    android:textSize="18sp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/class_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Computer Science Class"
                                android:textColor="#A0AEC0"
                                android:textSize="14sp" />

                            <!-- Classmates -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <!-- Classmate Avatars -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        app:cardCornerRadius="14dp"
                                        app:cardElevation="2dp">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#FF6B6B"
                                            android:contentDescription="Classmate" />

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_marginStart="-8dp"
                                        app:cardCornerRadius="14dp"
                                        app:cardElevation="2dp">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#4ECDC4"
                                            android:contentDescription="Classmate" />

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_marginStart="-8dp"
                                        app:cardCornerRadius="14dp"
                                        app:cardElevation="2dp">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#95E1D3"
                                            android:contentDescription="Classmate" />

                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="28 classmates"
                                    android:textColor="#A0AEC0"
                                    android:textSize="13sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- All Stats Button -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/all_stats_btn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardBackgroundColor="#4A5568"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_grade"
                                    app:tint="#B794F6" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="ALL STATS"
                                    android:textAllCaps="true"
                                    android:textColor="#B794F6"
                                    android:textSize="8sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Stats Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- Average Score -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/average_score_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="72.5"
                                android:textColor="@android:color/white"
                                android:textSize="32sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="AVERAGE SCORE"
                                android:textColor="#718096"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Attendance -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <!-- Attendance Bars -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="35dp"
                                    android:layout_marginEnd="4dp"
                                    android:background="@drawable/attendance_bar"
                                    android:backgroundTint="#48BB78" />

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="40dp"
                                    android:layout_marginEnd="4dp"
                                    android:background="@drawable/attendance_bar"
                                    android:backgroundTint="#48BB78" />

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/attendance_bar"
                                    android:backgroundTint="#4A5568" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="ATTENDANCE"
                                android:textColor="#718096"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Grades -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <!-- Circular Progress -->
                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp">

                                <ProgressBar
                                    android:id="@+id/grades_progress"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:indeterminate="false"
                                    android:max="100"
                                    android:progress="75"
                                    android:progressDrawable="@drawable/circular_progress"
                                    style="?android:attr/progressBarStyleHorizontal" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="GRADES"
                                android:textColor="#718096"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Content Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <!-- Left Column (Need Help + Tests) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <!-- Need Help Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Need help?"
                                android:textColor="#2D3748"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Call your mentor to get feedback about latest tests."
                                android:textColor="#718096"
                                android:textSize="14sp"
                                android:lineSpacingExtra="2dp" />

                            <!-- Contact Mentor Button -->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/contact_mentor_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                app:cardBackgroundColor="#667eea"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:padding="14dp">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#FF6B6B"
                                            android:contentDescription="Mentor" />

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="12dp"
                                        android:layout_weight="1"
                                        android:text="Contact Kate Woo"
                                        android:textColor="@android:color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Available from 11am till 4pm."
                                android:textColor="#A0AEC0"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Tests Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="TESTS"
                                    android:textColor="#718096"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40 min"
                                    android:textColor="#A0AEC0"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <!-- Test Item 1 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Libraries"
                                    android:textColor="#2D3748"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="60 min theory test"
                                    android:textColor="#A0AEC0"
                                    android:textSize="13sp" />

                                <!-- Status Icons -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:layout_marginEnd="8dp"
                                        app:cardBackgroundColor="#667eea"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:layout_width="18dp"
                                            android:layout_height="18dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_check"
                                            app:tint="@android:color/white" />

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:layout_marginEnd="8dp"
                                        app:cardBackgroundColor="#E2E8F0"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:layout_width="18dp"
                                            android:layout_height="18dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_arrow_forward"
                                            app:tint="#A0AEC0" />

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        app:cardBackgroundColor="#E2E8F0"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:layout_width="18dp"
                                            android:layout_height="18dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_lock"
                                            app:tint="#A0AEC0" />

                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Divider -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginVertical="16dp"
                                android:background="#E2E8F0" />

                            <!-- Test Item 2 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Algorithms"
                                    android:textColor="#2D3748"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="40 min theory test"
                                    android:textColor="#A0AEC0"
                                    android:textSize="13sp" />

                                <!-- Status Icons -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:layout_marginEnd="8dp"
                                        app:cardBackgroundColor="#E2E8F0"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:layout_width="18dp"
                                            android:layout_height="18dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_arrow_forward"
                                            app:tint="#A0AEC0" />

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:layout_marginEnd="8dp"
                                        app:cardBackgroundColor="#E2E8F0"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:layout_width="18dp"
                                            android:layout_height="18dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_lock"
                                            app:tint="#A0AEC0" />

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        app:cardBackgroundColor="#E2E8F0"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:layout_width="18dp"
                                            android:layout_height="18dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_lock"
                                            app:tint="#A0AEC0" />

                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                            </LinearLayout>

                            <!-- More Tests Link -->
                            <LinearLayout
                                android:id="@+id/more_tests_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingVertical="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="2 more this week"
                                    android:textColor="#667eea"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_arrow_forward"
                                    app:tint="#667eea" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Right Column (Next Classes) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <!-- Next Classes Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="NEXT CLASSES"
                                    android:textColor="#718096"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3 today"
                                    android:textColor="#A0AEC0"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <!-- Class Item 1: Multiprocessors -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingVertical="12dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginEnd="12dp"
                                    app:cardBackgroundColor="#FFE5E5"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="M"
                                        android:textColor="#FF6B6B"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />

                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Multiprocessors"
                                        android:textColor="#2D3748"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2 hours"
                                    android:textColor="#FF6B6B"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="8dp"
