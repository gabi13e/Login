<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    tools:context=".MainActivity">

    <!-- Decorative Circles -->


    <View
        android:id="@+id/circle_top_right"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/light_blue_circle"
        android:alpha="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="-40dp" />

    <View
        android:id="@+id/circle_top_right1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/light_blue_circle"
        android:alpha="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="200dp"/>

    <View
        android:id="@+id/circle_bottom_left"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/light_blue_circle"
        android:alpha="0.35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="-70dp"
        android:layout_marginBottom="200dp" />

    <View
        android:id="@+id/circle_middle_left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/light_blue_circle"
        android:alpha="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="250dp" />

    <!-- Bottom Navigation Card (kept at bottom, scrollview above it) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_nav_card"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="36dp"
        app:cardElevation="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <!-- Home Nav Item -->
            <LinearLayout
                android:id="@+id/nav_home_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/nav_home"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:contentDescription="@string/nav_home"
                    android:src="@drawable/ic_home"
                    app:tint="#4FC3F7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Home"
                    android:textColor="#4FC3F7"
                    android:textSize="11sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Courses Nav Item -->
            <LinearLayout
                android:id="@+id/nav_courses_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/nav_courses"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:contentDescription="@string/nav_courses"
                    android:src="@drawable/ic_book"
                    app:tint="#BDBDBD" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Courses"
                    android:textColor="#BDBDBD"
                    android:textSize="11sp" />

            </LinearLayout>

            <!-- Grades Nav Item -->
            <LinearLayout
                android:id="@+id/nav_grades_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/nav_grades"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:contentDescription="@string/nav_grades"
                    android:src="@drawable/ic_grade"
                    app:tint="#BDBDBD" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Grades"
                    android:textColor="#BDBDBD"
                    android:textSize="11sp" />

            </LinearLayout>

            <!-- Profile Nav Item -->
            <LinearLayout
                android:id="@+id/nav_profile_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/nav_profile"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:contentDescription="@string/nav_profile"
                    android:src="@drawable/ic_person"
                    app:tint="#BDBDBD" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Profile"
                    android:textColor="#BDBDBD"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Scrollable Content (above bottom nav) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- Header Section -->
            <LinearLayout
                android:id="@+id/header_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_pic_card"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Profile"
                        android:padding="8dp"
                        android:src="@drawable/ic_person"
                        app:tint="@color/blue_primary" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/greeting_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome!"
                        android:textColor="#757575"
                        android:textSize= "15sp"/>

                    <TextView
                        android:id="@+id/user_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ryan Bontug"
                        android:textColor="#EDA12B"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/notification_btn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/notification_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_notifications"
                            app:tint="#4FC3F7" />

                        <View
                            android:id="@+id/notification_badge"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="8dp"
                            android:background="@drawable/active_tab_background" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Quick Stats Row -->
            <LinearLayout
                android:id="@+id/quick_stats_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- GPA Quick Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/gpa_card"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“Š"
                            android:textSize="28sp" />

                        <TextView
                            android:id="@+id/gpa_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="3.8 GPA"
                            android:textColor="#4FC3F7"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Attendance Quick Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/attendance_card"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœ“"
                            android:textSize="28sp" />

                        <TextView
                            android:id="@+id/attendance_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="94% Present"
                            android:textColor="#66BB6A"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Overview Title -->
            <TextView
                android:id="@+id/overview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="Overview"
                android:textColor="#424242"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Overview Cards (Courses, Credits, Assignments) -->
            <LinearLayout
                android:id="@+id/overview_cards_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <!-- Active Courses Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/courses_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            app:cardBackgroundColor="#E1BEE7"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="ðŸ“š"
                                android:textSize="26sp" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Subjects"
                                android:textColor="#757575"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/active_courses_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="6 Subjects"
                                android:textColor="#424242"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="#BDBDBD" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Credits Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/credits_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            app:cardBackgroundColor="#FFF9C4"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="â­"
                                android:textSize="26sp" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Units"
                                android:textColor="#757575"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/credits_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="18 Units"
                                android:textColor="#424242"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="#BDBDBD" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Assignments Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/assignments_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            app:cardBackgroundColor="#FFCCBC"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="ðŸ“"
                                android:textSize="26sp" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bills"
                                android:textColor="#757575"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/pending_assignments_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Amount"
                                android:textColor="#424242"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="#FF7043"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:paddingTop="4dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="4dp"
                                android:text="Urgent"
                                android:textColor="@android:color/white"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="#BDBDBD" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Quick Actions (Icons grid) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Each quick action -->
                    <LinearLayout
                        android:id="@+id/quick_action_assignments"
                        android:layout_width="92dp"
                        android:layout_height="110dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="ðŸ“"
                                android:textSize="22sp" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Assignments"
                            android:textColor="#424242"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/quick_action_courses"
                        android:layout_width="92dp"
                        android:layout_height="110dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="ðŸ“š"
                                android:textSize="22sp" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Courses"
                            android:textColor="#424242"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/quick_action_schedule"
                        android:layout_width="92dp"
                        android:layout_height="110dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="ðŸ—“ï¸"
                                android:textSize="22sp" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Schedule"
                            android:textColor="#424242"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/quick_action_fees"
                        android:layout_width="92dp"
                        android:layout_height="110dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="ðŸ’³"
                                android:textSize="22sp" />
                        </androidx.cardview.widget.CardView>

                        <TextView
