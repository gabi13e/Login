<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Student Info Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Student Name & ID -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Name"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/student_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: 2021-12345"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

            <!-- Year Level Badge -->
            <TextView
                android:id="@+id/year_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1st Year"
                android:textColor="@color/blue_primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/year_level_badge"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <!-- Grades Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grades"
            android:textColor="#424242"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/prelim_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Prelim: 0.00"
                android:textColor="#616161"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/midterm_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Midterm: 0.00"
                android:textColor="#616161"
                android:textSize="13sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/finals_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Finals: 0.00"
                android:textColor="#616161"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/average_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Average: 0.00"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="13sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"/>

        <!-- Enrollment Date -->
        <TextView
            android:id="@+id/enrolled_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enrolled: Jan 15, 2024"
            android:textColor="#9E9E9E"
            android:textSize="12sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>