<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Course Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course Name"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/course_instructor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instructor: Dr. Smith"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/course_credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 units"
                android:textColor="@color/blue_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <!-- Course Description -->
        <TextView
            android:id="@+id/course_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course description goes here"
            android:textColor="#424242"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- Enrollment Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#E3F2FD"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_people"
                android:tint="@color/blue_primary"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/enrolled_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 students enrolled"
                android:textColor="@color/blue_primary"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/view_students_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="View Students"
                android:textColor="@color/blue_primary"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>

            <Button
                android:id="@+id/edit_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Edit"
                android:textColor="#FF9800"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>

            <Button
                android:id="@+id/delete_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Delete"
                android:textColor="#F44336"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>